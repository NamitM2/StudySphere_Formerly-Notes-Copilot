{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "venv: install",
      "type": "shell",
      "command": "python -m venv .venv && .venv\\Scripts\\python -m pip install --upgrade pip && .venv\\Scripts\\python -m pip install -r requirements.txt",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "backend",
      "type": "shell",
      "command": ".venv\\Scripts\\python -m uvicorn api.main:app --host 0.0.0.0 --port 8000 --reload",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [ { "regexp": "." } ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Uvicorn running on.*",
            "endsPattern": ".*Application startup complete.*"
          }
        }
      ],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "frontend",
      "type": "shell",
      "command": ".venv\\Scripts\\streamlit run ui/app.py --server.port 8501",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": { "API_URL": "http://localhost:8000" }
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [ { "regexp": "." } ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*You can now view your Streamlit app in your browser.*",
            "endsPattern": ".*Local URL:.*"
          }
        }
      ],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Dev: Start All",
      "dependsOn": ["venv: install", "backend", "frontend"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}

